---
import POSTS from "../utils/Projects";
import Postpost from "./PostCard.astro";
import SectionContainer from "./SectionContainer.astro";
---

<SectionContainer>
  <h2 class="text-xl sm:text-2xl mb-6 font-semibold">Proyectos</h2>
  <div class="flex flex-row flex-wrap gap-8 justify-between">
    {
      POSTS.map((post) => (
        <Postpost
          img={post.img}
          country={post.country}
          date={post.date}
          title={post.title}
          description={post.description}
        />
      ))
    }
  </div>
</SectionContainer>

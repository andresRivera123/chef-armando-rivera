---
import SectionContainer from "./SectionContainer.astro";
import "@fontsource/homemade-apple";
---

<SectionContainer>
  <div class="flex flex-col lg:flex-row justify-center items-center gap-10 ">
    <img
      src="/chef-armando-rivera-hero-1.png"
      alt="Chef Armando Rivera"
      class="w-80"
    />
    <div class="flex flex-col max-w-[800px]">
      <h1 class="text-6xl font-homemade">Chef Armando Rivera trotamundos</h1>
      <h2 class="text-4xl">La historia de mi viaje culinario</h2>
    </div>
  </div>
</SectionContainer>

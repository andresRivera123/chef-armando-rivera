---
import TextHero from "./TextHero.astro";
import SectionContainer from "./SectionContainer.astro";
---

<SectionContainer>
  <div
    class="flex flex-col mt-3 lg:flex-row justify-center items-center gap-10"
  >
    <div class="text-center lg:text-left flex flex-col max-w-[800px]">
      <h1 class="text-4xl sm:text-6xl font-oleo mb-2">Chef Armando Rivera</h1>
      <TextHero title="+25" subtitle1="años de" subtitle2="experiencia" />

      <TextHero
        title="Viajero"
        subtitle1="con gran pasión"
        subtitle2="en la cocina"
      />

      <TextHero
        title="Conectando"
        subtitle1="culturas y"
        subtitle2="gastronomía global"
      />
    </div>
    <div class="swiper hero-swiper w-full max-w-[500px]">
      <div class="swiper-wrapper">
        <div class="swiper-slide">
          <img src="/slider-hero-chef-armando-rivera-1.webp" alt="Chef" class="hero-img" />
        </div>
        <div class="swiper-slide">
          <img src="/slider-hero-chef-armando-rivera-2.webp" alt="Chef" class="hero-img" />
        </div>
        <div class="swiper-slide">
          <img src="/slider-hero-chef-armando-rivera-3.webp" alt="Chef" class="hero-img" />
        </div>
      </div>
    </div>  
</SectionContainer>
</div>

<script>
  import Swiper from 'swiper';
  import { Autoplay, EffectFade } from 'swiper/modules';
  import 'swiper/css';
  import 'swiper/css/effect-fade'; 

  new Swiper('.hero-swiper', {
    modules: [Autoplay, EffectFade],
    effect: 'fade',
    fadeEffect: {
      crossFade: true 
    },
    loop: true,
    allowTouchMove: false,
    autoplay: {
      delay: 4000,
      disableOnInteraction: false,
    },
  });
</script>

<style is:global>

  .hero-swiper {
    width: 100%;
    overflow: hidden;
  }

  .swiper-slide {
    width: 100%;
    height: 100%;
  }

  .hero-img {
    width: 100%;
    height: auto;
    object-fit: cover;
    display: block;
  }
</style>

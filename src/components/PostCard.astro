---
import Button from "../components/Button.astro";
import Link from "./Link.astro";

interface CardProps {
  img: string;
  country: string;
  date: string;
  title: string;
  description: string;
  link: string;
}

const { img, country, date, title, description, link } = Astro.props;
---

<article
  class="md:w-[47%] xl:w-[30%] bg-white border border-gray-200 rounded-lg shadow"
>
  <a href={link}>
    <img class="rounded-t-lg" src={img} alt="" />
  </a>
  <div class="p-5">
    <a href={link}>
      <h3 class="mb-2 text-lg font-semibold tracking-tight text-gray-900">
        {title}
      </h3></a
    >
    <p class="mb-4 text-base font-normal text-gray-700">{description}</p>
    <Link href={link} textLink="Ver proyecto" />
  </div>
</article>
